<div id="top-container" class="container-fluid">
    <h1 id="main-title" class="text-center">Encontre a sua oportunidade de emprego</h1>
    <p id="main-subtitle" class="text-center">Somos o portal com mais vagas de tecnologia do mercado!</p>
    <form id="search-form" class="form-inline" action="/" method="GET">
      <div class="form-group col-md-10">
        <input type="text" id="job" class="form-control" name="job" placeholder="Digite a vaga que está buscando...">
      </div>
      <div class="col-md-2">
        <button type="submit" class="btn btn-primary">Procurar</button>
      </div>
    </form>
  </div>
  <main>
    <div id="jobs-container" class="container">
      <div class="row">
        <div class="col-md-12">
          {{#if search}}
          <h2 id="job-list-title">Buscando vagas que contém: {{search}}</h2>
          {{else}}
          <h2 id="job-list-title">Veja nossas vagas em destaque</h2>
          {{/if}}
          <ul id="job-list" class="list-group">
            {{#each jobs}}
            <li class="list-group-item {{#if dataValues.new_job }}new-job{{/if}}">
              <img src="/img/logo.svg" alt="company">
              <p>{{dataValues.company}}</p>
              <h2>{{dataValues.title}}</h2>
              <p>R$ {{dataValues.salary}}</p>
              <span class="new-job-label">nova</span>
              <a href="/jobs/view/{{dataValues.id}}" class="btn btn-primary" id="botao-ver-vaga">Ver vaga</a>
            </li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </main>